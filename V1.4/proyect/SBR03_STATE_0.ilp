(* Network 0 *)
(*CALCULO DE LA CANTIAD DE MUESTRAS QUE PASAN ANTES DE QUE SE INICIE LIMPIEZA DEL SENSOR*)
LD    TRUE
MOVE    T_BT_SC, int0
MUL    3600, int0
MOVE    int0, MAX_SAMP
DIV    T_POLL, MAX_SAMP
(* Network 1 *)
(*STATE 0MODE SELECTION*)
LD    TRUE
EQ    STATE, 0
AND(
LD    TRUE
LT    CNT_SAMP, MAX_SAMP
MOVE    1, STATE
OR(
LD    TRUE
GE    CNT_SAMP, MAX_SAMP
MOVE    7, STATE
)
)
