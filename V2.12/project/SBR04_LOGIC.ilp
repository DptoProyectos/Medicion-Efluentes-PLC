(*2*)
(* Network 0 *)
(*YCHSi se esta en un estado distinto de:- 100 -> Estado de espera-  99 -> Estado de condiciones inicialesEn caso de no estar en ninguno de lo anteriores se esta en un estado de lógica del sistema*)
LD    TRUE
NE    State, 100
NE    State, 99
ST   lgBlock
(* Network 1 *)
(*YCHTAKE SAMPLEState  = 0*)
LD    lgBlock
EQ    State, 0
MOVE    1, State
S    %M100.2
R    %M100.4
R    %M100.3
(* Network 2 *)
(*YCHWAIT4SAMPLEState  = 1*)
LD    lgBlock
EQ    State, 1
TON   T97, TOnSampPump
__CR_EQ_1
MOVE    T97, int9
__CR_RESTORE
MOVE    2, State
(* Network 3 *)
(*READ ANALOG INPUTSDoy señal para inciar lectura de las entradas analógicas y espero que termineApago todas las bombasState  = 0*)
LD    lgBlock
EQ    State, 2
S_BLK    1, ReadAin
AND    %M100.6
F_TRIG
MOVE    3, State
R    %M100.5
R    %M100.2
R    %M100.4
R    %M100.3
(* Network 4 *)
(*YCHMATH CAUMETODO DIRECTOCuando directamente se tiene el caudal directo de la señal analógicaState  = 3*)
LD    lgBlock
EQ    State, 3
EQ    CaudMethod, 0
EQ    TypeFlow, 0
MOVE    CauRaw, Caudal
(* Network 5 *)
(*YCHMATH CAUMETODO DIRECTOCuando directamente se tiene el caudal directo de la señal de pulsosState  = 3*)
LD    lgBlock
EQ    State, 3
EQ    CaudMethod, 0
EQ    TypeFlow, 1
CAL    SBR17
(* Network 6 *)
(*YCHMATH CAUMETODO INDIRECTOCalculo la altura del agua en base a la distancia entre el sensor y el agua y los datos de instalación del mismoState  = 3*)
LD    lgBlock
EQ    State, 3
NE    CaudMethod, 0
MOVE    CauRaw, DCurrent
AND(
LD    TRUE
MOVE    DCurrent, DCurrentx1000
MUL    1000.0, DCurrentx1000
OR(
LD    TRUE
R_TO_DI    DCurrentx1000, DCurrentDint
)
OR(
LD    TRUE
DI_TO_I    DCurrentDint, IntDist
)
OR(
LD    TRUE
LINCO    DMin, DMax, HMax, HMin, 1.0, IntDist, dint5, HOut
)
)
(* Network 7 *)
(*YCHMATH CAUMETODO INDIRECTOSi la altura calculada es menor que cero visualizo el ceroState  = 3*)
LD    lgBlock
EQ    State, 3
NE    CaudMethod, 0
LE    HOut, 0.0
MOVE    0.0, HOut
(* Network 8 *)
(*YCHMATH CAUMETODO INDIRECTOSi la altura calculada es mayor que la altura máxima alcanzable visualizo solo la altura maxima alcanzableState  = 3*)
LD    lgBlock
EQ    State, 3
NE    CaudMethod, 0
GE    HOut, HMax
MOVE    HMax, HOut
(* Network 9 *)
(*YCHMATH CAUMETODO INDIRECTOCalculo el caudal según el metodo seleccionadoState  = 3*)
LD    lgBlock
EQ    State, 3
NE    CaudMethod, 0
CAL    SBR11    HOut, Caudal
(* Network 10 *)
(*YCHSalgo del estado 3State  = 3*)
LD    lgBlock
EQ    State, 3
INC    SampleElaps
AND(
LD    TRUE
GE    SampleElaps, TBetwSmpClean
MOVE    4, State
OR(
LD    TRUE
LT    SampleElaps, TBetwSmpClean
MOVE    100, State
)
)
(* Network 11 *)
(*YCHCLEANING 1.1Prendo la bomba de limpieza y la bomba de toma de muestra para limpiar la manguera de entrada y el filtro con agua limpiaState  = 4*)
LD    lgBlock
EQ    State, 4
MOVE    5, State
S    %M100.2
S    %M100.3
S    %M100.4
(* Network 12 *)
(*YCHCLEANING 1.2Espero la mitad del tiempo seteado para la bomba de limpieza con la bomba dosificadora prendida en reversaState  = 5*)
LD    lgBlock
EQ    State, 5
MOVE    TOnCleanPump, int7
DIV    2, int7
TON   T98, int7
__CR_EQ_1
MOVE    T98, int6
__CR_RESTORE
MOVE    6, State
R    %M100.2
S    %M100.3
R    %M100.4
(* Network 13 *)
(*YCHCLEANING 1.3Espero la mitad del tiempo seteado para la bomba de limpieza con la bomba dosificadora apagada y la bomba de limpieza prendida para completar la limpiezaState  = 6*)
LD    lgBlock
EQ    State, 6
MOVE    TOnCleanPump, int7
DIV    2, int7
TON   T99, int7
__CR_EQ_1
MOVE    T99, int6
__CR_RESTORE
AND(
LD    TRUE
MOVE    0, SampleElaps
OR(
LD    TRUE
MOVE    100, State
)
)
R    %M100.2
R    %M100.3
R    %M100.4
